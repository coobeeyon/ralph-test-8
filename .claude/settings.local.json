{
  "hooks": {
    "PreCompact": [
      {
        "hooks": [
          {
            "command": "lb prime",
            "type": "command"
          }
        ],
        "matcher": "*"
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "command": "lb prime",
            "type": "command"
          }
        ],
        "matcher": "*"
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(git *)",
      "WebSearch",
      "Bash(CLAUDECODE= claude:*)",
      "Bash(claude:*)",
      "Bash(env:*)",
      "Bash(cat:*)",
      "Bash(lb:*)"
    ]
  }
}
